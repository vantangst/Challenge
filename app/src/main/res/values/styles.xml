<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="defaultOffset">@dimen/size_12</item>
        <item name="android:textColor">@color/blackGray</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButton</item>
        <item name="android:dropDownListViewStyle">@style/popup</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="defaultOffset">@dimen/size_12</item>
        <item name="android:textColor">@color/blackGray</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButton</item>
        <item name="android:dropDownListViewStyle">@style/popup</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppDesign" />

    <style name="AppDesign.EditText">
        <item name="android:minHeight">@dimen/size_45</item>
        <item name="android:paddingStart">@dimen/size_15</item>
        <item name="android:paddingEnd">@dimen/size_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType"> </item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/blackGray</item>
        <!--        <item name="android:textCursorDrawable">@drawable/cursor_default</item>-->
    </style>

    <style name="AppDesign.TextEditorImage">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/blackGray</item>
        <item name="colorControlActivated">@color/blackGray</item>
        <item name="android:textColorPrimary">@color/blackGray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppDesign.EditText.Default">
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorPrimaryButtonText</item>
        <item name="android:background">@drawable/edit_text_default</item>
    </style>

    <style name="AppDesign.EditText.DefaultDark">
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorPrimaryButtonDarkText</item>
        <item name="android:background">@drawable/edit_text_default</item>
    </style>

    <style name="AppDesign.Button">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/size_45</item>
    </style>

    <style name="AppDesign.Button.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="AppDesign.Button.Next" parent="AppDesign.Button.Default">
        <item name="android:paddingStart">?defaultOffset</item>
        <item name="android:paddingEnd">?defaultOffset</item>
        <item name="android:drawableEnd">@drawable/ic_right_arrow_16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/next</item>
    </style>

    <style name="AppDesign.Button.Previous" parent="AppDesign.Button.Default">
        <item name="android:paddingStart">?defaultOffset</item>
        <item name="android:paddingEnd">?defaultOffset</item>
        <item name="android:drawableEnd">@drawable/ic_left_arrow_16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/previous</item>
    </style>

    <style name="AppDesign.TextView">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="AppDesign.TextView.Description">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="AppDesign.TextView.Label">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="AppDesign.TextView.Title">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="AppDesign.TextView.Time">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/size_40</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_textview_time</item>
    </style>

    <style name="AppDesign.TextView.Tab">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">?defaultOffset</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/size_20</item>
        <item name="android:paddingEnd">@dimen/size_20</item>
        <item name="android:paddingTop">@dimen/size_15</item>
        <item name="android:paddingBottom">@dimen/size_15</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="AppDesign.TextView.Nav">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="AppDesign.TextView.Blue">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppDesign.TextView.Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppDesign.TextView.Back">
        <item name="android:drawablePadding">?defaultOffset</item>
        <item name="android:padding">@dimen/size_10</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawableStart">@drawable/ic_left_arrow_16dp</item>
        <item name="android:text">@string/back</item>
    </style>

    <style name="AppDatePickerCalendarDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppDatePickerSpinnerDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="AppDesign.LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_02</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppDesign.DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_show</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="AppDesign.Dialog">
        <!--<item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="popupMenuStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:divider">#eaeaea</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="popup" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:itemBackground">@android:color/white</item>
    </style>
</resources>
