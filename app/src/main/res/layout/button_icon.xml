<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/radius_6"
    card_view:cardElevation="2dp"
    tools:context=".widgets.button.IconButton"
    tools:parentTag="androidx.cardview.widget.CardView">

    <RelativeLayout
        android:id="@+id/itemCard"
        android:layout_width="match_parent"
        android:background="?selectableItemBackground"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/size_14">

        <com.co.challengeliv3ly.widgets.image.AppImageView
            android:id="@+id/ivIcon"
            android:layout_marginStart="@dimen/size_10"
            android:layout_width="@dimen/size_15"
            android:layout_height="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_centerVertical="true"
            tools:src="@drawable/ic_setting" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="?defaultOffset"
            android:layout_toStartOf="@+id/ivRight"
            android:layout_toEndOf="@+id/ivIcon"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            tools:text="General" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="@dimen/size_15"
            android:layout_height="@dimen/size_15"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </RelativeLayout>

</merge>