<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginStart="?defaultOffset"
    android:layout_marginEnd="?defaultOffset"
    android:orientation="vertical"
    android:padding="@dimen/size_5"
    tools:context=".views.dialogs.PhotoPickerDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/size_10">

            <ImageView
                android:layout_width="@dimen/icon_size_normal"
                android:layout_height="@dimen/icon_size_normal"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_camera_32dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/btn_camera"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>

        <View style="@style/AppDesign.LineHorizontal" />

        <FrameLayout
            android:id="@+id/btnPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/size_10">

            <ImageView
                android:layout_width="@dimen/icon_size_normal"
                android:layout_height="@dimen/icon_size_normal"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_photo_32dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/btn_photo"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?defaultOffset"
        android:layout_marginBottom="?defaultOffset"
        android:background="@drawable/box_white"
        android:gravity="center"
        android:padding="?defaultOffset"
        android:text="@string/btn_cancel"
        android:textColor="@color/black"
        android:textStyle="bold" />
</LinearLayout>